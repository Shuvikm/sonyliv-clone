{
  "name": "sony-live-clone",
  "version": "1.0.0",
  "description": "A Sony Live streaming platform clone with React.js and MongoDB",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "seed": "node server/seed.js"
  },
  "keywords": ["streaming", "movies", "sports", "news", "react", "mongodb"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.5.0",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
} 